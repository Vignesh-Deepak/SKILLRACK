#include<stdio.h>
#include<stdlib.h>

int main()
{
    int N;
    scanf("%d"&N);
    char str[N];
    fgets(str,sizeof(str),stdin);
    for(int i=0;i<N;i++)
    {
        int len=strlen(str);
        if(len<10)
         printf("%c",str);
        else{
            printf("%c%d%c",str[0],len-2,str(len-1) );  //len-1 = last element  len-2 = second last element  
                                                        // str(i-1) = last character  
                                                        // len-1= last length
        }
        
        
    }
    

}

